<html>
<style type="text/css">
  body
  {
   background-image: url("https://images.pexels.com/photos/46274/pexels-photo-46274.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500");
  background-repeat: no-repeat;
  background-size: cover;
  }
  table
   { font-size: 24px; }
</style>
<body>
<h1><center><font size="20">Listing articles</font></center></h1>
 <center>
  <form action="/search2">
    <font size="5">Search <input type="text" name="titlename" placeholder="Enter the Title">
    <input type="submit" value="Go"></font>
  </form>
  <br>
<table cellpadding="15" border="5" font-size="20">
  <tr>
    <th><strong>Title</strong></th>
    <th><strong>Text</strong></th>
    <th><strong>Total Chars in Text</strong></th>
    
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td> 
      <td><%= article.text %></td>
      <td><%= article.text_chars_count %></td>
      <td><%= link_to 'Show', author_article_path(article.author,article) %></td>
      <td><%= link_to 'Edit', edit_author_article_path(article.author,article) %></td>
       <td><%= link_to 'Delete', author_article_path(article.author,article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
      
  <% end %>
  
</table><br>
 <h2><%= link_to 'Create New Article', new_author_article_path(@articles) %></h2>
 <h2><%= link_to 'Go to Authors Table', authors_path %></h2>

 </center>
</body>
</html>
