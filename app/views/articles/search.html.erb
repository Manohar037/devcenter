<style type="text/css">
  body
  {background-image: url("https://images.all-free-download.com/images/graphicthumb/47_hd_picture_of_the_japanese_style_color_background_170001.jpg");
  }
  table
   { font-size: 24px; }
</style>
<body>
  <center>
	<h1><font size="20">Search results</font></h1>
	<table border="5" cellpadding="15" font-size="20">
		<tr>
			<td><strong>Title</strong></td>
			<td><strong>Text</strong></td>
			<td><strong>Author</strong></td>
		</tr>
<% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td> 
      <td><%= article.text %></td>
      <td><%= article.author %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Delete', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
  </table>
  <br>
  <h2><%= link_to 'Back',articles_path %></h2>
  </body>
</center>
