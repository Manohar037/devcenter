<style type="text/css">
  body
  {background-image: url("https://images.pexels.com/photos/46274/pexels-photo-46274.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500");
  background-repeat: no-repeat;
  background-size: cover;
  }
  table
   { font-size: 24px; }
</style>
<body>
  <center>
  <h1><font size="20">Search results</font></h1>
  <table border="5" cellpadding="15" font-size="20">
    <tr>
      <td><strong>Author Name</strong></td>
      <td><strong>Articles</strong></td>
    </tr>
<% @authors.each do |author| %>
    <tr>
      <td><%= author.author_name %></td> 
      <td><%= author.articles %></td> 
      <td><%= link_to 'Show', author_path(author) %></td>
      <td><%= link_to 'Edit', edit_author_path(author) %></td>
      <td><%= link_to 'Delete', authors_path(author),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
  </table>
  <br>
  <h2><%= link_to 'Back',authors_path %></h2>
  </body>
</center>
